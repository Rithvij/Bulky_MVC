<h1>Edit</h1>
@model Category

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradeint m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Edit Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input hidden asp-for="Id" />
			<div class="border p-3 mt-4">
				@* <div class="row pb-2"> *@
				@* 	<h2 class="text-primary">Edit Category</h2> *@
				@* 	<hr /> *@
				@* </div> *@

				@* validation summary also has ModelOnly value which will display error
		not repated to model props like common errors in val summary*@
				@* <div asp-validation-summary="All"></div> *@
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"></label>

					@* tag helpers here helpful to display errors as well *@
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" class="form-control border-0 shadow" />
					<label asp-for="DisplayOrder" class="ms-2"></label>

					@* tag helpers here helpful to display errors as well *@
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>
				</div>

				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn btn border form-control">
							Back to List
						</a>
					</div>
				</div>


			</div>
		</form>
	</div>
</div>





@* Client side vaidations can be done by adding in scripts
any custom validations entered in controller will remain server side
*@
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}