<h1>Edit</h1>
@model Category

<form method="post">
	<input hidden asp-for="Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>

		@* validation summary also has ModelOnly value which will display error
		not repated to model props like common errors in val summary*@
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" disabled class="form-control" />
			@* tag helpers here helpful to display errors as well *@
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" type="text" class="form-control" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn border form-control">
					Back to List
				</a>
			</div>
		</div>


	</div>
</form>

@* Client side vaidations can be done by adding in scripts
any custom validations entered in controller will remain server side
*@
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}